.card#exchange_box
  .card-header.text-center
    Type the desired amount

    %span#swap
      %i#swap_icon.material-icons cached

  .card-block
    = form_tag('/convert', method: :get, id: 'exchange_form') do
      .row
        #source.col-md-4.offset-md-1
          .form-group
            %p.title Source
            = select_tag 'source_currency', options_for_select(currency_list, 'USD'), class: 'form-control', id: 'source_currency'

          .form-group
            %input.form-control(type='number' name='amount' id='amount' placeholder='Amount' step='any' required)

        #equals.col-md-2 =

        #target.col-md-4
          .form-group
            %p.title Target
            = select_tag 'target_currency', options_for_select(currency_list, 'BRL'), class: 'form-control', id: 'target_currency'

          .form-group
            %input.form-control(type='number' name='result' id='result' placeholder='Result' readonly)
